doctype html
html
  head
    meta(name='viewport', content='width=device-width', initial-scale='1.0')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans')
    link(rel='stylesheet', href='/css/reset.css')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    title Twitter Job Finder
  body
    .container
      .row#container-row
        .col-md-4#filter-container
          form#filter-form
            input.form-control#job-title(placeholder = "Job title...")
            select.form-control#filter-location
              each val, index in states
                option(value= val)= index
            input.form-control.btn.btn-primary.btn-lrg(id = 'filter-btn' type = 'button' value = 'Apply')
        .col-md-8#tweet-river

    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script(src='/socket.io/socket.io.js')    
    script(src='/min/JobTracker.min.js')